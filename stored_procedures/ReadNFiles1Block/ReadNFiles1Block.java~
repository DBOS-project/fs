import org.voltdb.*;
import java.io.File;
import java.io.FileInputStream; 
import java.io.InputStream; 
import java.io.IOException;
import java.io.RandomAccessFile;;

/* 
 * usage:
 * exec Read p_key, file_name, block_list, user_name;
 */

public class ReadNFiles1Block extends VoltProcedure {
    public final SQLStmt getCurrDir =
        new SQLStmt("SELECT current_directory FROM UserInfo " +
                    "WHERE user_name = ?;");
    public final SQLStmt read_content =
        new SQLStmt("SELECT bytes from file " +
                    "WHERE p_key = ? AND file_name IN (?,?,?,?,?) AND block_number = ? " +
                    "AND user_name = ? ;");

    // TODO: INLIST_OF_BIGINT instead of 5 hardcoded params
    public VoltTable[] run (int p_key, 
                            int fnm1, int fnm2, int fnm3, int fnm4, int fnm5,
                            int block_number, String user_name) throws VoltAbortException {
        
        // get file absolute path
        voltQueueSQL(getCurrDir,
                     user_name);

        VoltTable[] user_query = voltExecuteSQL();
        VoltTable user_info = user_query[0];
        if (user_info.getRowCount() < 1)
            return user_query;
        String current_directory = user_info.fetchRow(0).getString(0);

        fmn1 = current_directory + fnm1;
        fmn2 = current_directory + fnm2;
        fmn3 = current_directory + fnm3;
        fmn4 = current_directory + fnm4;
        fmn5 = current_directory + fnm5;

        // read file content
        voltQueueSQL(read_content,
                     p_key,
                     fnm1, fnm2, fnm3, fnm4, fnm5,
                     block_number,
                     user_name);
        return voltExecuteSQL(true);
    }
}
             
